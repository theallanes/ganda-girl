<%= form_tag products_path, :method => "get" do%>
  <div class="field is-grouped m-5">
    <p class="control is-expanded">
      <%= text_field_tag :search, params[:search], :class => "input" %>
    </p>
    <%= select_tag :brand_id, options_from_collection_for_select(Brand.all, :id, :brand_name, params[:brand_id]), prompt: "Brand" %>
    <p class="control">
      <%= submit_tag("Search", :name => nil, class: "button is-dark")%>
    </p>
  </div>
<% end %>

<div class="columns is-multiline">
  <%= render partial: 'product',
             collection: @products,
             locals: { name_is_link: true } %>
</div>

<nav class="pagination is-centered" aria-label="pagination">
  <%= paginate @products %>
</nav>

