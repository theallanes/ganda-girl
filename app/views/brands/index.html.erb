<h2 class="title is-2">All Brands:</h2>

<div class="grid">
  <% @brands.each do |brand| %>
    <div class="cell">
      <div class="card">
        <div class="card-content">
          <div class="media">
            <div class="media-content">
              <p class="title is-4"><%= link_to brand.brand_name, brand, :class =>"title is-4" %></p>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

<nav class="pagination is-centered" aria-label="pagination">
  <%= paginate @brands %>
</nav>
