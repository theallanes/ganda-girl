<nav>
  <ul>
    <li>
      <% if cart.present? %>
        <ul>
          <% cart.each do |product| %>
            <li>
              <%= button_to '❌', cart_path(product), method: :delete%> <%= product.product_name %>
            </li>
          <% end %>
        </ul>
      <% else %>
        <h5 class = "subtitle is-5">No items in cart</h5>
      <% end %>
    </li>
  </ul>
</nav>