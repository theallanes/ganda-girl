<h2 class="title is-2">Makeup Types:</h2>

<div class="grid">
  <% @types.each do |type| %>
    <div class="cell">
      <div class="card">
        <div class="card-content">
          <div class="media">
            <div class="media-content">
              <p class="title is-4"><%= link_to type.type_name, type, :class =>"title is-4" %></p>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

<nav class="pagination is-centered" aria-label="pagination">
  <%= paginate @types %>
</nav>

